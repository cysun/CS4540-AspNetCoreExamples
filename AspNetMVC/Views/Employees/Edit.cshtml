@model Employee

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DateHired">Date Hired</label>
        <input asp-for="DateHired" type="date" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="SupervisorId">Supervisor</label>
        <select asp-for="SupervisorId" asp-items="ViewBag.Supervisors" class="form-control">
            <option></option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>