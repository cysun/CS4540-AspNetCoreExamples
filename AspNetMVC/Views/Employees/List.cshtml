@model List<Employee>

<p><a asp-action="Add" class="btn btn-primary">Add</a></p>

<table class="table table-hover">
    <thead>
        <tr><th>Id</th><th>Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td><a asp-action="View" asp-route-id="@employee.Id">@employee.Name</a></td>
                <td><a asp-action="Edit" asp-route-id="@employee.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
